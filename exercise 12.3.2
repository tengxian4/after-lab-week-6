#include "pch.h"
#include <iostream>
using namespace std;
int main()
{
	int set[] = { 5,10,15,20,25,30,35,40 };
	int *ptrset=set;
	cout << "The numbers in set are : " << endl;
	for (int i =0;i<8;i++)
	cout << ptrset[i]<< " " ;
	cout << endl << "The numbers in  set backward are: "<< "\n";
	for (int i = 7; i >=0; i--)
		cout << ptrset[i]<< " " ;
}
