// Execise 8.3.1, This program read 5 scores and display the highest score and find out the differences bteween the highest score and each score 
#include "stdafx.h"
#include <iostream>
using namespace std;
int main ()
{
	double score[5] , HighestScore = 0;
	cout << "Enter 5 scores :";
	for (int i = 0; i < 5; i++)
	{
		cin >> score[i];
		HighestScore = score[0];
		if (score[i] > HighestScore)
		{
			HighestScore = score[i];
		}
	}
	cout << "The highest score is : " << HighestScore << endl;
	cout << "The score and their differences from the highest are :\n";
	for (int i = 0; i < 5; i++)
	{
		cout << score[i] << " off by " << HighestScore - score[i] << endl;
	}	
	
}
